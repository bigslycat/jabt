{
  "name": "jabt",
  "version": "0.4.3",
  "description": "Just another build tool. React build and dev HMR server scripts",
  "os": [
    "linux"
  ],
  "engines": {
    "node": ">=7.4.0",
    "npm": ">=4.1.1"
  },
  "main": "lib/middleware/createMiddleware.js",
  "bin": {
    "jabt": "lib/scripts/build.js",
    "jabt-backend": "lib/scripts/build-backend.js"
  },
  "scripts": {
    "safe-build": "npm run check && npm run build",
    "build": "babel src --out-dir lib",
    "precommit": "npm run safe-build",
    "check": "npm run lint && npm run types && npm run test",
    "lint": "eslint '@(src|__tests__)/**/*.js'",
    "types": "flow",
    "test": "jest --config jest.json",
    "flow-coverage": "flow-coverage-report"
  },
  "files": [
    "LICENSE.md",
    ".babelrc",
    "src",
    "lib"
  ],
  "dependencies": {
    "autoprefixer": "9.4.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-es2015-destructuring": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-plugin-transform-es2015-parameters": "^6.22.0",
    "babel-plugin-transform-exponentiation-operator": "^6.22.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^2.0.1",
    "eslint": "5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "2.0.0",
    "flow-bin": "^0.89.0",
    "glob": "^7.1.1",
    "image-webpack-loader": "4.6.0",
    "jest": "^23.6.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.0-beta6",
    "react-hot-loader": "^4.6.0",
    "shelljs": "^0.8.3",
    "style-loader": "^0.23.1",
    "webpack": "4.27.1",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "devDependencies": {
    "flow-coverage-report": "0.6.0",
    "flow-typed": "^2.0.0",
    "husky": "1.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigslycat/jabt.git"
  },
  "keywords": [
    "React"
  ],
  "author": {
    "name": "Pavel Tereschenko",
    "email": "me@pavlik.pro",
    "url": "https://github.com/bigslycat"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bigslycat/jabt/issues"
  },
  "homepage": "https://github.com/bigslycat/jabt#readme"
}
